{
  "name": "api-projeto",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:docker:prisma": "docker build -f prisma.dockerfile -t renangalvao/repo:project-prisma-migrate .",
    "postbuild:docker:prisma": "docker push renangalvao/repo:project-prisma-migrate",
    "build:docker:api": "docker build -t renangalvao/repo:project-api .",
    "postbuild:docker:api": "docker push renangalvao/repo:project-api",
    "build:docker": "npm run build:docker:prisma && npm run build:docker:api",
    "prisma:dev:new:migrate": "npm run docker:dev:down && npm run docker:dev:up && dotenv -e .env.dev -- npx prisma migrate dev --name init",
    "prisma:dev:deploy": "dotenv -e .env.dev -- npx prisma migrate reset --force",
    "docker:dev:down": "docker compose down --remove-orphans",
    "docker:dev:up": "docker compose up dev-db dev-redis -d",
    "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev:up && sleep 1 && npm run prisma:dev:deploy",
    "stop:dev": "npm run docker:dev:down",
    "start:dev": "npm run docker:dev:restart && dotenv -e .env.dev -- nest start --watch",
    "docker:prod:down": "docker compose down --remove-orphans",
    "docker:prod:up": "docker compose up prisma-migrate api -d",
    "docker:prod:migrate": "docker compose up prisma-migrate -d",
    "docker:prod:restart": "npm run docker:prod:down && npm run docker:prod:up",
    "start:prod": "npm run docker:prod:restart",
    "stop:prod": "npm run docker:prod:down",
    "docker:test:down": "docker compose -f docker-compose.test.yml down -v --remove-orphans",
    "docker:test:up": "docker compose -f docker-compose.test.yml up test-db test-redis -d",
    "docker:test:restart": "npm run docker:test:down && npm run docker:test:up && sleep 1",
    "pretest:e2e": "npm run pretest:int",
    "test:e2e": "dotenv -e .env.test -- jest -i --watch --forceExit --config jest-e2e.json",
    "pretest:int": "npm run docker:test:restart && dotenv -e .env.test -- npx prisma migrate reset --force --skip-seed",
    "test:int": "dotenv -e .env.test -- jest -i --watch --forceExit --config jest-int.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.3",
    "@nestjs/throttler": "^3.1.0",
    "@prisma/client": "^4.4.0",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.1.3",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "prisma": "^4.4.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
